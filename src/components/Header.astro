---
// src/components/Header.astro
import ArrowIcon from "../assets/arrow_horizontal.svg?raw";
---

<header>
  <!-- Navigation par numéros (à gauche) -->
  <div class="page-indicators">
    <button class="page-btn active" data-page="0" aria-label="Page 1">1</button>
    <button class="page-btn" data-page="1" aria-label="Page 2">2</button>
    <button class="page-btn" data-page="2" aria-label="Page 3">3</button>
    <button class="page-btn" data-page="3" aria-label="Page 4">4</button>
    <button class="page-btn" data-page="4" aria-label="Page 5">5</button>
  </div>

  <!-- Boutons flèches (au centre) -->
  <div class="arrow-controls">
    <button id="prev-btn" class="arrow-btn" aria-label="Section précédente" style="transform: scaleX(-1);">
      <Fragment set:html={ArrowIcon} />
    </button>
    <button id="next-btn" class="arrow-btn" aria-label="Section suivante">
      <Fragment set:html={ArrowIcon} />
    </button>
  </div>
</header>

<style>
  header {
    position: fixed;
    top: 2rem;
    left: 0;
    right: 0;
    display: grid;
    grid-template-columns: 1fr auto 1fr;
    align-items: center;
    z-index: 1000;
    padding: 0 3rem;
  }

  /* Container pour les indicateurs de page (à gauche) */
  .page-indicators {
    display: flex;
    gap: 0.5rem;
    justify-self: start;
  }

  /* Boutons de page numérotés */
  .page-btn {
    width: 38px;
    height: 38px;
    background: rgba(36, 37, 38, 0.5);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: white;
    font-size: 0.9rem;
    font-weight: 500;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: all 0.2s ease;
  }

  .page-btn:hover {
    background: rgba(50, 51, 52, 0.7);
  }

  /* État actif du bouton de page avec CYAN SOLIDE */
  .page-btn.active {
    background: rgb(38, 211, 211);
    backdrop-filter: none;
    border: none;
    color: #242526;
  }

  /* Container pour les flèches (au centre) */
  .arrow-controls {
    display: flex;
    gap: 1rem;
    justify-self: center;
  }

  /* Boutons flèches */
  .arrow-btn {
    height: 38px;
    width: 76px;
    background: rgba(36, 37, 38, 0.5);
    backdrop-filter: blur(10px);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 10px;
    color: white;
    cursor: pointer;
    display: flex;
    align-items: center;
    justify-content: center;
    transition: background 0.2s ease;
  }

  .arrow-btn:hover {
    background: rgba(50, 51, 52, 0.7);
  }

  .arrow-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
  }

  :global(.arrow-btn svg) {
    width: 1rem;
    height: 1rem;
    stroke: currentColor;
    stroke-width: .5;
  }
</style>
